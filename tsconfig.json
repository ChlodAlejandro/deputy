{
    "compilerOptions": {
        "incremental": true,
        "target": "es6",
        "lib": ["dom"],
        "outDir": "./build",
        "noImplicitAny": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "typeRoots": [
            "./node_modules/@types",
            "./node_modules/types-mediawiki",
            "./types"
        ]
    },
    "include": [
        "./src/**/*.ts"
    ]
}
