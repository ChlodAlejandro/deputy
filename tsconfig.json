{
    "compilerOptions": {
        "incremental": true,
        "target": "es6",
        "lib": [
            "DOM",
            "ES2015.Promise",
            "ES2015.Collection"
        ],
        "outDir": "./build",

        "noImplicitAny": true,

        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "esModuleInterop": true,

        "typeRoots": [
            "./node_modules/@types",
            "./node_modules/types-mediawiki",
            "./types"
        ],

        "jsx": "react",
        "jsxFactory": "h"
    },
    "include": [
        "./src/**/*.ts"
    ]
}
