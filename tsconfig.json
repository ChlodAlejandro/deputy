{
    "compilerOptions": {
        "target": "es6",
        "lib": ["esnext", "dom"],
        "outDir": "./build",
        "noImplicitAny": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "incremental": true,
        "typeRoots": [
            "./node_modules/types-mediawiki/",
            "./types/",
            "./src/"
        ],
        "types": [
            "jest"
        ]
    },
    "include": [
        "./src/**/*.ts",
        "./node_modules/types-mediawiki/**/*",
        "./types/**/*"
    ]
}
